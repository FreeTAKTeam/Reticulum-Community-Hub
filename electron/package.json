{
  "name": "rch-desktop",
  "private": true,
  "version": "2.0.1",
  "description": "Electron shell for Reticulum Community Hub.",
  "homepage": "https://github.com/FreeTAKTeam/Reticulum-Community-Hub",
  "main": "dist/main.js",
  "author": {
    "name": "FreeTAKTeam",
    "email": "support@freetakteam.org"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "sync:version": "node scripts/sync-version.mjs",
    "build:ui": "npm --prefix ../ui run build",
    "build:electron": "tsc -p tsconfig.json",
    "build:backend": "node scripts/build-backend.mjs",
    "build": "npm run sync:version && npm run build:ui && npm run build:electron && npm run build:backend",
    "start": "electron dist/main.js",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.freetakteam.rch",
    "productName": "RCH Desktop",
    "icon": "buildResources/icon.png",
    "directories": {
      "output": "dist-release",
      "buildResources": "buildResources"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../ui/dist",
        "to": "ui"
      },
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "rch-backend*"
        ]
      }
    ],
    "win": {
      "icon": "buildResources/icon.png",
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "artifactName": "RCH_win Install_${version}.${ext}"
    },
    "portable": {
      "artifactName": "RCH_win Portable_${version}.${ext}"
    },
    "mac": {
      "icon": "buildResources/icon.png",
      "x64ArchFiles": "**/backend/**"
    },
    "linux": {
      "icon": "buildResources/icon.png",
      "target": [
        "deb"
      ],
      "category": "Utility",
      "maintainer": "FreeTAKTeam <support@freetakteam.org>"
    }
  }
}
