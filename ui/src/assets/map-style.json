{
  "version": 8,
  "name": "RTH Vector Tactical",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "demotiles": {
      "type": "vector",
      "url": "https://demotiles.maplibre.org/tiles/tiles.json"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#222128"
      }
    },
    {
      "id": "land",
      "type": "fill",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "fill-color": "#3E3E40",
        "fill-opacity": 1
      }
    },
    {
      "id": "land-secondary",
      "type": "fill",
      "source": "demotiles",
      "source-layer": "countries",
      "filter": ["==", "admin", 2],
      "paint": {
        "fill-color": "#636366",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "coastline",
      "type": "line",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "line-color": "#636366",
        "line-width": 0.8
      }
    },
    {
      "id": "country-boundary",
      "type": "line",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "line-color": "#636366",
        "line-width": 0.6,
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "geolines",
      "type": "line",
      "source": "demotiles",
      "source-layer": "geolines",
      "paint": {
        "line-color": "#2E2D33",
        "line-width": 0.6
      }
    },
    {
      "id": "country-labels",
      "type": "symbol",
      "source": "demotiles",
      "source-layer": "countries",
      "layout": {
        "text-field": ["get", "name_en"],
        "text-size": 12,
        "text-transform": "uppercase",
        "text-font": ["Noto Sans Regular"],
        "text-letter-spacing": 0.08
      },
      "paint": {
        "text-color": "#F4F4F5",
        "text-halo-color": "#222128",
        "text-halo-width": 1
      }
    },
    {
      "id": "geoline-labels",
      "type": "symbol",
      "source": "demotiles",
      "source-layer": "geolines",
      "layout": {
        "text-field": ["get", "name"],
        "text-size": 11,
        "text-font": ["Noto Sans Regular"],
        "text-letter-spacing": 0.06
      },
      "paint": {
        "text-color": "#F4F4F5",
        "text-halo-color": "#222128",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "demotiles",
      "source-layer": "centroids",
      "layout": {
        "text-field": ["get", "name_en"],
        "text-size": 10,
        "text-font": ["Noto Sans Regular"],
        "text-letter-spacing": 0.05
      },
      "paint": {
        "text-color": "#F4F4F5",
        "text-halo-color": "#222128",
        "text-halo-width": 1
      }
    }
  ]
}
