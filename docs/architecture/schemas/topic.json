{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://r3akt.local/schema/topic.json",
  "title": "R3AKTTopic",
  "description": "Topic snapshot payload. When emitted over LXMF event channels it is carried in FIELD_EVENT (0x0D).",
  "type": "object",
  "required": [
    "topic",
    "created_at",
    "created_by"
  ],
  "properties": {
    "topic": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+(\\.[a-zA-Z0-9_-]+)*$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "retention_policy": {
      "type": "object"
    },
    "access_policy": {
      "type": "object"
    }
  }
}
